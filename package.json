{
    "name": "@elihowey/recsset",
    "version": "1.0.0",
    "description": "A standard stylesheet to share across my personal projects",
    "main": "scss/recsset.scss",
    "files": [
        "scss/*",
        "dist/*"
    ],
    "scripts": {
        "build": "rm -rf dist/ && sass --style=compressed scss:dist",
        "dev": "sass --watch scss:dist index.scss:index.css",
        "prepack": "npm run test && npm run build",
        "test": "prettier --check ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EliHowey/recsset.git"
    },
    "keywords": [
        "CSS",
        "Sass",
        "reset"
    ],
    "author": "Eli Howey",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/EliHowey/recsset/issues"
    },
    "homepage": "https://github.com/EliHowey/recsset#readme",
    "devDependencies": {
        "prettier": "^2.2.1",
        "sass": "^1.30.0"
    }
}
